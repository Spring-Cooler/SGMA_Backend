<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springcooler.sgma.choice.query.repository.ChoiceMapper">

    <resultMap id="choiceResultMap" type="com.springcooler.sgma.choice.query.dto.ChoiceDTO">
        <id property=""></id>
    </resultMap>

    <select id="findChoiceById" parameterType="long">
        SELECT
                A.PROBLEM_CHOICE_ID
               ,A.CONTENT
               ,A.PROBLEM_ID
          FROM CHOICE A
         WHERE A.PROBLEM_ID = #{problemChoiceId}
    </select>
</mapper>
